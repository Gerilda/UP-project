<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:layout_marginTop="@dimen/search_top_margin"
    android:layout_marginBottom="@dimen/search_top_margin"
    android:layout_marginRight="@dimen/search_margin_horizontal"
    android:layout_marginLeft="@dimen/search_margin_horizontal">
    <LinearLayout
        android:id="@+id/text_bckg"
        android:background="@color/lightbackColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/background_time"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:background="@color/primaryLightColor">

            <TextView
                android:id="@+id/time"
                android:layout_width="75dp"
                android:padding="2dp"
                android:layout_height="75dp"
                android:gravity="center"
                android:text="9:30 9:10"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/primaryTextColor"
                android:textSize="24sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/sub_name"
                android:text="Lorem Ipsum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/prof_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/aud_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="314(2)"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>
